<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3 class="ps-2"><%= listing.title %></h3>
  </div>
  <div class="col-6 offset-3 show-card ">
    <div class="card listing-card mb-0">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body p-2 pb-0">
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location%>, &nbsp;<i><%= listing.country %></i>
        </p>
      </div>
    </div>
  </div>
</div>
<% if(currUser && currUser._id.equals(listing.owner._id)){ %>
<div class="btns ps-3 mt-2">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark col-1 offset-3 edit-btn"
    >Edit</a
  >

  <form
    method="post"
    action="/listings/<%= listing._id %>?_method=DELETE"
    onsubmit="return confirm('Are you sure you want to delete?');"
  >
    <button class="btn btn-dark offset-5">Delete</button>
  </form>
</div>
<% } %>

 
<div class="col-6 offset-3 mb-3">
  <hr />
  <% if(currUser){ %>
  <h4 class="ps-2">Share your view with Review</h4>
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation ps-2 pe-2"
  >
   
    <div class="mt-3">
       <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-heart">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
     
    </div>
    <div class="mb-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        name="review[comment]"
        id="comment"
        placeholder="Share your experience"
        cols="30"
        rows="5"
        class="form-control"
        minlength="20"
        required
      ></textarea>
      <div class="invalid-feedback">Description must be 20 Characters long</div>
    </div>

    <button class="btn btn-outline-dark">Post</button>
  </form>
    <hr />
  <% } %>


  <% if(listing.reviews.length){ %>
  <h4>All Reviews</h4>
  <div class="row">
    
      
   
      <div class="card p-2 mb-3 review-list">
    <% for(let review of listing.reviews) { %>
    
      <div class="card mb-1 review-box">
        <div class="card-body">
          <div class="review-body">
          <div>
            <span><i class="fa-solid fa-circle-user"></i></i><%= review.author.username%></span>
            <span class="rating-brdr">&lpar;&nbsp;</span>
            <% for(let i = 0; i < review.rating; i++) { %>
             <span class="golden-star">&starf;</span>
            <% } %>
            <span class="rating-brdr">&rpar;&nbsp;</span>
         </div>

        <p class="card-text date">
          <%= review.createdAt.toString().split(" ").splice(1,3).join(" ") %>
         </p>
    </div>
    <p class="card-title rating-comment"> <%= review.comment %> </p>
    <% if(currUser&&review.author &&currUser._id.equals(review.author._id)){ %>
    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-1">
      <button class="btn btn-sm btn-dark rvw-del-btn ">Delete</button>
    </form>
    <% } %>
         <hr class="my-0 opacity-5">
    </div>
      
    </div>

 
    <% } %> 
    </div>
      
  </div>
  <% } %> 
  <% if(!listing.reviews.length) {%>
    <h5>No reviews</h5>
    <p></p>
    <% } %> 
  </div>
</div>

