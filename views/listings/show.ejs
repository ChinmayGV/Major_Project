<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="col-6 offset-3 show-card ">
    <div class="card listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="btns">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark col-1 offset-3 edit-btn"
    >Edit</a
  >

  <form
    method="post"
    action="/listings/<%= listing._id %>?_method=DELETE"
    onsubmit="return confirm('Are you sure you want to delete?');"
  >
    <button class="btn btn-dark offset-5">Delete</button>
  </form>
</div>

<div class="col-6 offset-3 mb-3">
  <hr />
  <h4>Share your view with Review</h4>
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="mb-3 mt-3">
      <!-- <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
        class="form-range"
      /> -->
        <label class="form-label">Rate Us:</label>
        <div class="star-rating">
          <input type="radio" id="rating5" name="review[rating]" value="5" required/><label for="rating5">★</label>
          <input type="radio" id="rating4" name="review[rating]" value="4" required/><label for="rating4">★</label>
          <input type="radio" id="rating3" name="review[rating]" value="3" required/><label for="rating3">★</label>
          <input type="radio" id="rating2" name="review[rating]" value="2" required/><label for="rating2">★</label>
          <input type="radio" id="rating1" name="review[rating]" value="1" required/><label for="rating1">★</label>
          <div class="invalid-feedback">please select rating</div>
        </div>
    </div>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        name="review[comment]"
        id="comment"
        placeholder="Share your experience"
        cols="30"
        rows="5"
        class="form-control"
        minlength="20"
        required
      ></textarea>
      <div class="invalid-feedback">Description must be 20 Characters long</div>
    </div>

    <button class="btn btn-outline-dark">Post</button>
  </form>

  <hr />
  <h4>All Reviews</h4>
  <div class="row">

    <div class="card p-2 mb-3 review-list">
    <% for(let review of listing.reviews) { %>
      <div class="card mb-1 review-box">
        <div class="card-body">
          <div class="review-body">
          <div>
            <span>Jhon Ibrahim</span>
            <span class="rating-brdr">&lpar;&nbsp;</span>
            <% for(let i = 0; i < review.rating; i++) { %>
             <span class="golden-star">&starf;</span>
            <% } %>
            <span class="rating-brdr">&rpar;&nbsp;</span>
         </div>

        <p class="card-text date">
          <%= review.createdAt.toString().split(" ").splice(1,3).join(" ") %>
         </p>
    </div>
    <p class="card-title rating-comment"> <%= review.comment %> </p>
    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-1">
      <button class="btn btn-sm btn-dark rvw-del-btn ">Delete</button>
    </form>
         <hr class="my-0 opacity-5">
    </div>
      
    </div>

 
    <% } %> 
    </div>
  </div>
 
    
  </div>
</div>
