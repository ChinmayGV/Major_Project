        <div class="mb-3 col-12 col-md-6">
          <label class="form-label fw-bold">Categories</label>

          <div class="dropdown w-100">
            <button
              class="btn btn-light w-100 d-flex justify-content-between align-items-center shadow-sm"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              style="border: 1px solid #ddd; border-radius: 12px"
            >
              <span id="dropdown-text">‚¨áÔ∏è Select Categories</span>
              <span>‚ñæ</span>
            </button>

            <ul
              class="dropdown-menu p-3 w-100 shadow"
              style="max-height: 260px; overflow-y: auto; border-radius: 12px"
            >
              <% const allCategories = [ "Trending", "Rooms", "Mountains",
              "Iconic Cities", "Castles", "Pools", "Camping", "Farms", "Arctic",
              "Boats", "Domes", "Beaches", "Luxury", "Wildlife", "Adventure" ];
              %> <% const categoryIcons = { "Trending": "üî•", "Rooms": "üõèÔ∏è",
              "Mountains": "‚õ∞Ô∏è", "Iconic Cities": "üåÜ", "Castles": "üè∞",
              "Pools": "üèä", "Camping": "üèïÔ∏è", "Farms": "üåæ", "Arctic": "‚ùÑÔ∏è",
              "Boats": "‚õµ", "Domes": "üõñ", "Beaches": "üèñÔ∏è", "Luxury": "üíé",
              "Wildlife": "ü¶Å", "Adventure": "üéí" }; %> <%
              allCategories.forEach(cat => { %>
              <li>
                <label class="dropdown-item">
                  <input type="checkbox" value="<%= cat %>" class="me-2
                  category-check" <%= listing.category.includes(cat) ? "checked"
                  : "" %> /> <%= categoryIcons[cat] %> <%= cat %>
                </label>
              </li>
              <% }) %>
            </ul>
          </div>

          <!-- Hidden dynamic array inputs go here -->
          <div id="category-container"></div>

          <!-- Dummy validator -->
          <input type="text" id="category-validator" class="d-none" required />
          <div class="invalid-feedback">
            Please select at least one category.
          </div>
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-12 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            name="price"
            inputmode="decimal"
            pattern="[0-9]*\.?[0-9]+"
            value="<%= listing.price%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid price</div>
        </div>
        <div class="mb-3 col-12 col-md-8">
          <label for="country" class="form-label">Country</label>

          <select
            id="country-select"
            name="country"
            class="form-select"
            required
            aria-label="Default select example"
          >
            <option value="<%=listing.country %>">
              &nbsp;&nbsp;<%= listing.country%>
            </option>
            <%- include('../includes/country.ejs') %>
          </select>

          <div class="invalid-feedback">Country field required</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="location"
          value="<%= listing.location%>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location field required</div>
      </div>

      <button class="btn mt-3 mb-3 btn-dark allbtn" type="submit">
        Edit :&#41;
      </button>
    </form>
  </div>
</div>
