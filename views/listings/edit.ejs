<%- layout('/layouts/boilerplate') %>
  <body>
    <h3>Edit Your Listing</h3>
    <form method="Post" action="/listings/<%= listing._id %>?_method=put">
      <input type="text" name="title" value="<%=listing.title %>" />
      <br /><br />

      <textarea name="description" rows="6" cols="30">
<%= listing.description%></textarea
      ><br /><br />
      <input type="text" name="image" value="<%=listing.image%>" /><br /><br />
      <input
        type="number"
        name="price"
        value="<%= listing.price%>"
      /><br /><br />
      <input
        type="text"
        name="location"
        value="<%= listing.location%>"
      /><br /><br />
      <input
        type="text"
        name="country"
        value="<%= listing.country%>"
      /><br /><br />
      <button type="submit">Edit :&#41;</button>
    </form>
  </body>
</html>
