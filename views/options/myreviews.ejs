<% layout('/layouts/boilerplate') %>
    <style>
      body {
        font-family: "Inter", sans-serif;
        margin: 0;
        padding: 0;
        background: #f7f9fb;
        color: #333;
      }
      .container {
        width: 90%;
        max-width: 900px;
        margin: 30px auto;
      }
      h2 {
        font-size: 26px;
        font-weight: 600;
        margin-bottom: 20px;
      }
      .review-card {
        background: white;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 22px;
        display: flex;
        gap: 20px;
        align-items: flex-start;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
      }
      .review-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
      }
      .listing-img {
        width: 90px;
        height: 90px;
        border-radius: 12px;
        object-fit: cover;
      }
      .review-content h3 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
      }
      .review-text {
        margin-top: 6px;
        font-size: 14px;
        color: #555;
        line-height: 1.5;
      }
      .no-reviews {
        background: white;
        padding: 25px;
        border-radius: 18px;
        text-align: center;
        font-size: 16px;
        color: #777;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.04);
      }
      .stars {
        color: #f5b50a;
        font-size: 16px;
        margin-bottom: 4px;
      }

    /* delete btn style    */
    /* Existing CSS... */

/* NEW: Delete Button Styling */
.delete-form {
  margin-left: auto; /* This magic property pushes it to the far right */
  align-self: flex-start; /* Aligns it to the top-right */
}

.delete-btn {
  background: none;
  border: none;
  color: #555; /* Red color */
  font-size: 18px;
  cursor: pointer;
  padding: 8px;
  border-radius: 50%;
  transition: all 0.2s ease;
  opacity: 0.7; /* Slightly faded usually */
}

.delete-btn:hover {
  background-color: #ffe5e5; /* Light red background on hover */
  opacity: 1;
  color: #ff4d4d;
  transform: scale(1.1); /* Slight zoom effect */
}

/* ----------------------- */
    </style>
  </head>
  <body>
    <div class="container"> 


        <% if(reviews.length === 0){ %>
            <h2>You don't have any reviews Yet</h2>
        <% }else{ %>

        <h2>My Reviews</h2>


        <% for(review of reviews){ %>

      <div class="review-card">
        <img
          class="listing-img"
          src="<%=review.listing.image.url %>"
          alt="<%= review.listing.image.filename %>"
        />
        <div class="review-content">
          <div class="stars">
            <% for(let i=0 ; i< review.rating ; i++){ %>
                â˜…
            <% } %>
          </div>
          <h3><%= review.listing.title %></h3>
          <p class="review-text">
           <%= review.comment %>
          </p>
        </div>
        <form 
              class="delete-form" 
              method="POST" 
              action="/listings/<%= review.listing._id %>/reviews/<%= review._id %>?_method=DELETE&redirect_to=/myReviews"
            >
              <button class="delete-btn" title="Delete this review">
                <i class="fa-regular fa-trash-can"></i>
              </button>
          </form>
      </div>
      <% } %>
      

      <% } %>

     
    </div>
  </body>

