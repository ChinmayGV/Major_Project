<%- layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/verifyEmail.css" />
<div class="page-wrapper">
  <div class="verify-box">
    <div class="verify-icon">✉️</div>
    <h2>Verify Your Email</h2>
    <p class="subtext">
      Enter your email address below and we will send you a verification link.
    </p>

    <form
      action="/resend-verification-link"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3 text-start">
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="Enter your email"
          required
          value="<%= email %>"
        />
        <div class="invalid-feedback">Please enter a valid email address.</div>
      </div>
      <button type="submit" class="btn-verify">Send Verification Link</button>
    </form>
  </div>
</div>
