<%- layout("/layouts/boilerplate") %>

<style>
  /* 1. THE WRAPPER FIX */
  .page-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;

    /* CALCULATION EXPLANATION:
       100vh = The full height of the user's screen.
       - 160px = An estimate of your Navbar + Footer height combined.
       This ensures the box is centered in the visible gap without creating a scrollbar.
    */
    min-height: calc(100vh - 208px);
    /* background-color: #f5f5f5; */
  }

  .verify-box {
    width: 100%;
    max-width: 420px;
    background: #ffffff;
    padding: 32px 30px;
    border-radius: 14px;
    box-shadow: 0 6px 22px rgba(0, 0, 0, 0.08);
    text-align: center;
  }

  /* 2. SCOPING FIX: 
     Notice I added ".verify-box" before every selector below.
     This ensures these styles ONLY apply to this box, 
     and will NOT mess up your Navbar or Footer. 
  */

  .verify-box .verify-icon {
    font-size: 42px;
    background: #eef2ff;
    width: 68px;
    height: 68px;
    margin: 0 auto 18px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #5166ff;
  }

  .verify-box h2 {
    font-weight: 600;
    margin-bottom: 10px;
    color: #222;
    /* Reset font size just in case */
    font-size: 1.75rem;
  }

  .verify-box p.subtext {
    color: #707070;
    font-size: 0.93rem;
    margin-bottom: 22px;
  }

  /* Scoped Input styling */
  .verify-box input {
    width: 100%;
    padding: 12px 14px;
    border-radius: 8px;
    border: 1.6px solid #d8def3;
    font-size: 1rem;
    transition: 0.22s;
  }

  .verify-box input:focus {
    border-color: #5a73ff;
    box-shadow: 0 0 5px rgba(90, 115, 255, 0.35);
    outline: none;
  }

  /* Scoped Button styling */
  .verify-box .btn-verify {
    width: 100%;
    margin-top: 16px;
    padding: 12px;
    background: #5a73ff;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.05rem;
    font-weight: 500;
    cursor: pointer;
    transition: 0.25s;
    display: inline-block; /* Bootstrap fix */
  }

  .verify-box .btn-verify:hover {
    background: #4d63e6;
    color: white;
  }
</style>

<div class="page-wrapper">
  <div class="verify-box">
    <div class="verify-icon">✉️</div>
    <h2>Verify Your Email</h2>
    <p class="subtext">
      Enter your email address below and we will send you a verification link.
    </p>

    <form
      action="/resend-verification-link"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3 text-start">
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="Enter your email"
          required
          value="<%= email %>"
        />
        <div class="invalid-feedback">Please enter a valid email address.</div>
      </div>
      <button type="submit" class="btn-verify">Send Verification Link</button>
    </form>
  </div>
</div>
