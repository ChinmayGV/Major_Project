<%- layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="alert alert-danger col-6 offset-3" role="alert">
    <% if(err.statusCode){%>
    <h3>status:<%= err.statusCode%></h3>
    <%}%> <%if(!err.statusCode){%>
    <h3>status:<%= statusCode %></h3>
    <%}%> <% if(err.message){%>
    <h4 class="alert-heading"><%= err.message %></h4>
    <%}%> <%if(!err.message){%>
    <h4><%=message %></h4>
    <%}%>

    <!-- <p><%=err.stack%></p> -->
  </div>
</div>
