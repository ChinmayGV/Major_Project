<%- layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/renderEmail.css" />
<div class="page-wrapper">
  <div class="verify-container">
    <div class="icon-wrapper">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="64"
        height="64"
        fill="currentColor"
        class="bi bi-envelope-check"
        viewBox="0 0 16 16"
      >
        <path
          d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v2.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Z"
        />
        <path
          d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697Z"
        />
        <path
          d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.75.75a.5.5 0 0 0 .707 0l1.5-2.5a.5.5 0 0 0-.172-.686Z"
        />
      </svg>
    </div>

    <% if (typeof process !== 'undefined' && process === 'reset') { %>
    <h3 class="txt">Please check your email to reset your password.</h3>
    <% } else { %>
    <h3 class="txt">Please check your email to verify your account.</h3>
    <% } %>
    <div
      style="
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 10px;
      "
    >
      <form action="https://mail.google.com/">
        <button type="submit" class="btn-primary">Go to Mail</button>
      </form>
      <% if(process!=='reset' && process!=='reverify'){ %>
      <form action="/login">
        <button type="submit" class="btn-later">I'll do it later</button>
      </form>
      <% } %>
    </div>
    <p class="txt">If not, cross-check your mail address</p>
  </div>
</div>
